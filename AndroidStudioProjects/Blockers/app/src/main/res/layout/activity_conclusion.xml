<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wooden_background"
    tools:context="com.google.gryan0822.blockers.ConclusionActivity"

    >

    <RelativeLayout
        android:id="@+id/results_final_form"
        android:layout_width="347dp"
        android:layout_height="469dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#eedfcb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/final_standings_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/final_winner_textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="Final Standings"
            android:textColor="@android:color/black"
            android:textStyle="bold|italic" />

        <TableLayout
            android:id="@+id/final_player_standings_table"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/final_standings_txtView"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"
            android:padding="1dp"
            android:stretchColumns="*">

        </TableLayout>

        <TextView
            android:id="@+id/game_over_title_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:textColor="@android:color/black"
            android:text="The Game Of Blockers Has Ended \n\nAND THE WINNER IS..."
            android:textAlignment="center"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/final_winner_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_over_title_txtView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:textColor="@android:color/black"
            android:text="PlayerHere"
            android:textSize="24dp"
            android:textStyle="italic|bold" />

        <Button
            android:id="@+id/main_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:backgroundTint="#e5c59b"
            android:text="Main Menu" />

        <ImageView
            android:id="@+id/trophy_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toEndOf="@+id/game_over_title_txtView"
            android:layout_toRightOf="@+id/game_over_title_txtView"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@+id/game_over_title_txtView"
            android:layout_toStartOf="@+id/game_over_title_txtView"
            app:srcCompat="@android:drawable/btn_star_big_on" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
